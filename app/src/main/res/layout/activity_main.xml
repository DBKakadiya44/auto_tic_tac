            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            app:backgroundTint="@null"
            android:background="@drawable/shadow_bg"
            app:cardElevation="@dimen/_56sdp"
